{
  "codeLens.enable": true,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "metals.showInferredType": true,
  "metals.superMethodLensesEnabled": true,
  "metals.showImplicitArguments": true,
  "metals.showImplicitConversionsAndClasses": true,
  "metals.statusBarEnabled": false,
  "coc.preferences.formatOnSaveFiletypes": ["scala"],
  "rust-analyzer.diagnostics.disabled": ["unresolved-proc-macro"],
  "rust-analyzer.lens.debug": false,
  "rust-analyzer.lens.references": true,
  "rust-analyzer.lens.methodReferences": true,
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "gosnippets/UltiSnips"
  ]
}
