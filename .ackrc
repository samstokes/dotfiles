# Scala
--type-set
scala=.scala

# Sass
--type-set
sass=.sass

# Handlebars
--type-set
handlebars=.hbs

# ignore Rails junk dirs, they're rarely interesting for grep
--ignore-dir
doc
--ignore-dir
vendor
--ignore-dir
tmp
--ignore-dir
coverage
--ignore-dir
pkg

# ignore tags files
--ignore-file
is:tags
