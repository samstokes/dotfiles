[user]
	email = sstokes@launchdarkly.com
	name = Sam Stokes
[core]
	excludesfile = /home/sam/.git-excludes
	editor = nvr-if-in-nvim-terminal
	pager = less -i
[color]
	branch = auto
	diff = auto
	status = auto
	interactive = auto
[alias]
	co = checkout
	ci = commit
	br = branch
	st = status
	h = !x git help
	sm = submodule
	dfw = !x git diff -w
  pk = cherry-pick
	dt = difftool
	rb = rebase
	mf = merge-feature
  mt = mergetool
  mw = !git meanwhile
  meanwhile = !git logg $(git wbr)..master
  pushit = !git push -u origin $(git wbr):refs/heads/samstokes/$(git wbr)
	ct = committool
	rc = review-commits
	wbr = describe --contains --all HEAD
	sha = rev-parse --short HEAD
	mb = merge-base
	dfwp = diff -w --patience
	shwp = show -w --patience
	clean-conflict-cruft = "!find . \\( -name '*.orig' -o -name '*.rej' -o -name '*.BACKUP.*' -o -name '*.BASE.*' -o -name '*.LOCAL.*' -o -name '*.REMOTE.*' \\) -exec rm -i \\{\\} \\;"
	ccc = !git clean-conflict-cruft
  rup = remote update --prune
	logg = log --oneline --decorate --graph
[merge]
	tool = nvr-if-in-nvim-terminal
	defaultToUpstream = true
[mergetool "nvr"]
	cmd = nvr --remote-tab-wait-silent +'set bufhidden=delete' -c \"Gdiff\" \"$MERGED\"
[mergetool "nvr-if-in-nvim-terminal"]
	cmd = nvr-if-in-nvim-terminal -c \"Gdiff\" \"$MERGED\"
[rerere]
	enabled = true
[clean]
	requireForce = true
[diff]
	tool = gvimdiff
	mnemonicprefix = 1
	renames = copies
[push]
	default = upstream
[rebase]
	autosquash = true
[pull]
	ff = only
[init]
	defaultBranch = main
[url "git@github.com:"]
	insteadOf = https://github.com/
